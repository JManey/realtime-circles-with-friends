<!DOCTYPE html>
<html>
  <head>
    <title>Realtime with Socket.io</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <span>realtime-circles</span><button id="clear">clear</button>
    </header>
    <div class="container">
      <section id="chat-container">
        <div>
          Message: <input type="text" id="message" /><button id="message-btn">
            Send
          </button>
        </div>
        <ul id="chat"></ul>
      </section>
    </div>
    <section id="circles"></section>
    <footer><ul id="players"></ul></footer>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/app.js"></script>
  </body>
</html>
